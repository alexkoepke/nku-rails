<%= render 'header' %>

<div class="container" id="content">
  <% flash.each do |key, value| %>
        <div class="<%= flash_class(key) %>">
              <%= value %>
        </div>
  <% end %>
  <div class="row">
    <div class="page-header">
        <h1 class="pull-left">Students</h1>
        <div class="pull-right">
          <div class="btn-group">
          <%= link_to "Sign Up!", new_student_path, class: 'btn btn-primary' %>
          </div>
        </div>
    </div>
  </div>
  
  <div class="row">
    
    <div class="col-sm-4">
      <% @students.each do |student| %>
        <div class="info-block">
          <p><strong>Name: </strong><%= student.name %></p>
          <p><strong>Nickname: </strong><%= student.nickname %></p>
          <p><strong>Email: </strong><%= student.email %></p>
          <p><strong>Image Url: </strong><%= student.image_url %></p>
          <p><%= link_to 'Show', student %></p>
          <p><%= link_to 'Edit', edit_student_path(student) %></p>
          <p><%= link_to 'Drop Class', student_path(student), method: :delete, data: { confirm: 'Are you sure?' } %></p>
        </div>
        <hr>
      <% end %>
    </div>
  </div>
</div>