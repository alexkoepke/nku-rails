<%= render 'header' %>

<div class="container" id="content">
  <% flash.each do |key, value| %>
        <div class="<%= flash_class(key) %>">
              <%= value %>
        </div>
  <% end %>
  <div class="row">
    <div class="page-header">
        <h1 class="pull-left">Students</h1>
        <div class="pull-right">
          <div class="btn-group">
            <% if current_student %>
              <%= link_to 'Edit', edit_student_path(current_student), class: 'btn btn-primary' %>
              <%= link_to "Sign Out!", sign_out_path, class: 'btn btn-primary' %>
              <%= link_to 'Drop Class', student_path(current_student), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-primary' %>
            <% else %>
              <%= link_to "Sign In!", new_session_path, class: 'btn btn-primary' %>
              <%= link_to "Sign Up!", new_student_path, class: 'btn btn-primary' %>
            <% end %>
          </div>
        </div>
    </div>
  </div>
  
  
  <% @students.each do |student| %>
    <div class="row">
      <div class="col-sm-7 student-profile">
          
            <div class="avatar pull-left" style='background-image: url(<%= avatar_url(student) %>)'></div>
            <div class="student">
              <p><strong>Name: </strong><%= student.name %></p>
              <p><strong>Nickname: </strong><%= student.nickname %></p>
              <p><strong>Email: </strong><%= student.email %></p>
              <p><%= link_to 'Show', student %>, <%= link_to 'Edit', edit_student_path(student) %>, <%= link_to 'Drop Class', student_path(student), method: :delete, data: { confirm: 'Are you sure?' } %></p>
            </div>
         
        </div>
    </div>
  <% end %>
  
</div>